<form action="/photos/view" method="GET">
  <input type="text" name="id" placeholder="Please Enter ID" />

  <input type="submit" value="SEARCH" />
</form><br />



<div id="album">
<% @photos.each do |image| %>

    <img src="<%= image.url %>" />
    <h3><%= image.title %>:  <%= image.description %> ID: <%= image.id %></h3>
</div>
<% end %>
